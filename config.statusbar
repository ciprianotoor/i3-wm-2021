# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#00FF00"
}
#personalizar barra
#informacion vital
order += "tztime local"
order += "battery all"
#order += "ipv6"
order += "memory"
#order += "wireless _first_"
#order += "ethernet _first_"
order += "disk /"
#order += "load"
order += "volume master"

ipv6 {
        
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
        }

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining %emptytime"
        format_down = "Sin Bateria"
        status_chr = "âš¡ CARGANDO"
        status_bat = "ðŸ”‹ BATERIA AL=>"
        status_unk = "? ESTADO DESCONOCIDO"
        status_full = "â˜» BATERIA CARGADA "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

disk "/" {
        format = "Almacenamiento=%percentage_used Usado,%percentage_free Libre,%percentage_avail"
        
}

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "Hoy es %y-%m-%d: de las %H:%M:%M"
       
}

volume master {
	format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
               }



